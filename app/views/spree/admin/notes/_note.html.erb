<div class="note <%= note.important ? 'important' : '' %>">
  <div class="note-icon">
    <%= fa_icon note.important ? 'exclamation-circle' : 'pencil-square-o' %>
  </div>
  <div class="note-content">
    <%= note.body %>
  </div>
  <div class="note-footer">
    <% if defined?(show_order) && show_order %>
      Added to order <%= link_to note.noteable.number, spree.edit_admin_order_path(note.noteable) %>
      by <%= note.author %> on <%= note.created_at.to_formatted_s(:long_ordinal) %>
    <% else %>
      Created by <%= note.author %> on <%= note.created_at.to_formatted_s(:long_ordinal) %>
    <% end %>
  </div>
</div>
